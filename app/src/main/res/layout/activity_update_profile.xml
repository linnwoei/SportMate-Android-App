<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


    <TextView
        android:id="@+id/update_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE PROFILE"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter email"
        android:id="@+id/enter_email_update_text_view"/>

    <EditText
        android:id="@+id/update_field_email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter password"
        android:id="@+id/enter_password_update_text_view"/>

    <EditText
        android:id="@+id/update_field_password"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your name"
        android:id="@+id/enter_name_update_textview"/>

    <EditText
        android:id="@+id/update_field_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your gender"
        android:id="@+id/gender_update_form_textview"/>

    <EditText
        android:id="@+id/update_field_gender"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your photo url"
        android:id="@+id/photo_update_form_textview"/>

    <EditText
        android:id="@+id/update_field_photo"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your age"
        android:id="@+id/age_update_form_textview"/>

    <EditText
        android:id="@+id/update_field_age"
        android:layout_width="200dp"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/update_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update" />

    <Button
        android:id="@+id/delete_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Profile" />

</LinearLayout>