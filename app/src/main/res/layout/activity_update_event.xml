<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">


    <TextView
        android:id="@+id/update_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UPDATE EVENT DETAILS"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Event Type:" />

    <Spinner
        android:id="@+id/sport_types_spinner_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Event Title:" />

    <EditText
        android:id="@+id/et_sport_title_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Sport Event Address:" />

    <fragment
        android:id="@+id/place_autocomplete_fragment_update"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

    <Button
        android:id="@+id/select_date_button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_radio_button_blue"
        android:textColor="#FFFFFF"
        android:padding="3dp"
        android:text="Select date" />

    <Button
        android:id="@+id/show_time_picker_button_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFFFF"
        android:padding="3dp"
        android:background="@drawable/corner_radio_button_blue"
        android:text="Select time" />

    </LinearLayout>
    <TextView
        android:id="@+id/show_date_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/show_time_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Sport Event Details:" />

    <EditText
        android:id="@+id/et_details_update"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many people needed?" />

    <Spinner
        android:id="@+id/people_needed_spinner_update"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />




    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
    <Button
        android:id="@+id/update_event_button"
        android:layout_width="wrap_content"
        android:background="@color/primary_dark"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="3dp"
        android:text="Update" />

    <Button
        android:id="@+id/delete_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="3dp"
        android:layout_marginLeft="20dp"
        android:background="#FF4B1F"
        android:text="Delete Event" />
        </LinearLayout>

</LinearLayout>