<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary_dark"
            android:titleTextColor="#FFFFFF"
            android:paddingTop="30dp">
        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/event_info_photo"
                        android:layout_width="fill_parent"
                        android:layout_height="250dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentRight="true"
                        android:maxWidth="100dp"
                        android:scaleType="fitXY" />


                    <TextView
                        android:id="@+id/event_title_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:background="#8d000000"
                        android:gravity="left"
                        android:paddingLeft="15dp"
                        android:textAlignment="viewStart"
                        android:textColor="#FFFFFF"
                        android:textSize="30sp"
                        android:textStyle="bold" />
                </RelativeLayout>


                <GridLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingLeft="13dp"
                    android:paddingTop="15dp"
                    android:rowCount="3">

                    <TextView
                        android:id="@+id/event_category_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:drawableLeft="@drawable/sport_icon"
                        android:drawablePadding="3dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_people_needed_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:drawableLeft="@drawable/calendar1"
                        android:drawablePadding="6dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_time_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|top"
                        android:paddingBottom="8dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_address_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:layout_gravity="fill"
                        android:drawableLeft="@drawable/map"
                        android:drawablePadding="3dp"
                        android:textSize="22sp" />
                </GridLayout>
            </LinearLayout>


            <android.support.design.widget.FloatingActionButton
                android:id="@+id/update_event_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:clickable="true"
                android:src="@drawable/edit_white"
                app:layout_anchor="@id/linearA"
                app:layout_anchorGravity="top|right|end" />
        </android.support.design.widget.CoordinatorLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/get_directions_button"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="left|top"
                android:drawableLeft="@drawable/direct"
                android:text="Directions"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonMap" />

            <Button
                android:id="@+id/event_on_map_button"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="left|top"
                android:drawableLeft="@drawable/onmap"
                android:text="MAP"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonMap" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:background="#F2F2F7" />

        <Button
            android:id="@+id/paticipate_in_event_button"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:text="JOIN"
            android:textColor="#FFFFFF"
            android:theme="@style/MyButtonJoin" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="30dp">

            <Button
                android:id="@+id/cancel_participation_in_event_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="CANCEL"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonCancel" />

            <Button
                android:id="@+id/add_to_calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to calendar"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonEventInfo" />

            <Button
                android:id="@+id/open_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open chat"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonEventInfo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#F2F2F7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="EVENT DETAILS"
            android:textColor="@color/accent"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/event_details_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight= "10dp"
            android:textColor="@color/secondary_text"
            android:textSize="22sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#F2F2F7" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/event_creator_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Organized by "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/event_creator_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:textColor="@color/accent"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="9dp"
            android:background="#F2F2F7" />

        <TextView
            android:id="@+id/people_going_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_event_attendees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:scrollbars="horizontal"
            android:visibility="visible"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#F2F2F7" />

            <TextView
                android:id="@+id/rating_layout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Did you like this event?"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBar" />

                <Button
                    android:id="@+id/submit_rating_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_button_radius"
                    android:text="RATE"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/already_voted_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="You already voted"
                    android:textSize="15dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/accent" />
        </LinearLayout>


    </LinearLayout>
</ScrollView>

