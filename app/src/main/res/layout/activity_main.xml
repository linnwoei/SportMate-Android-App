<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/ly_list_form"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/sign_out_main_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Out"
            android:visibility="invisible" />

        <Button
            android:id="@+id/user_profile_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:visibility="visible" />


        <Button
            android:id="@+id/sign_in_up_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign In/ Sign Up" />


        <Button
            android:id="@+id/all_events_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="All events including past" />

        <Button
            android:id="@+id/future_events_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Future events" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filter events by category:" />

        <Spinner
            android:id="@+id/sport_types_spinner"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/filter_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <info.hoang8f.android.segmented.SegmentedGroup xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
            android:id="@+id/segmented2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            segmentedgroup:sc_border_width="2dp"
            segmentedgroup:sc_corner_radius="10dp">

            <RadioButton
                android:id="@+id/events_list_button"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List" />

            <RadioButton
                android:id="@+id/events_map_button"
                style="@style/RadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map" />
        </info.hoang8f.android.segmented.SegmentedGroup>


        <FrameLayout
            android:id="@+id/frameEvents"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></FrameLayout>


        <fragment
            android:id="@+id/map_fragment"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_bar_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="right"
        android:orientation="horizontal">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/create_event_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_margin="28dp"
            android:layout_marginBottom="30dp"
            android:backgroundTint="#0090C1"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_add_circle_white_24dp"
            app:borderWidth="0dp"
            app:elevation="10dp"
            app:pressedTranslationZ="0dp"
            app:fabSize="normal"
            />
    </RelativeLayout>

</RelativeLayout>

