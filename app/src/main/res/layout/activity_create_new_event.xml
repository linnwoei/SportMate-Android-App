<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="30dp"
    android:padding="8dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:text="CREATE NEW EVENT" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Select Event Type:" />

    <Spinner
        android:id="@+id/sport_types_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Event Title:" />

    <EditText
        android:id="@+id/et_sport_title"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Sport Event Address:" />

    <fragment
        android:id="@+id/place_autocomplete_fragment"
        android:name="com.google.android.gms.location.places.ui.PlaceAutocompleteFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/select_date_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:padding="4dp"
        android:background="@drawable/button_round_create"
        android:layout_marginRight="30dp"
        android:text="Select date" />

    <Button
        android:padding="4dp"
        android:id="@+id/show_time_picker_button"
        android:layout_width="wrap_content"
        android:background="@drawable/button_round_create"
        android:textColor="#FFFFFF"
        android:layout_height="wrap_content"
        android:text="Select time" />

</LinearLayout>
    <TextView
        android:id="@+id/show_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Event's Details:" />

    <EditText
        android:id="@+id/et_details"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:textSize="22sp" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="How many people needed?" />

    <Spinner
        android:id="@+id/people_needed_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:padding="4dp"
        android:background="@drawable/button_round_create"
        android:id="@+id/add_new_event_button"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_marginLeft="20dp"
        android:text="Create new event" />
</LinearLayout>

