<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.user.android.capstone.activity.EventInfoActivity"
    tools:showIn="@layout/activity_event_info">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearA"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_category_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/sport_icon"
                        android:drawablePadding="3dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:paddingRight="70dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_people_needed_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_date_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/calendar1"
                        android:drawablePadding="6dp"
                        android:paddingBottom="8dp"
                        android:paddingLeft="3dp"
                        android:textSize="22sp" />

                    <TextView
                        android:id="@+id/event_time_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingBottom="8dp"
                        android:textSize="22sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/event_address_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/map"
                        android:drawablePadding="3dp"
                        android:paddingRight="10dp"
                        android:textSize="22sp" />
                </LinearLayout>
            </LinearLayout>
        </android.support.design.widget.CoordinatorLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <Button
                android:id="@+id/paticipate_in_event_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="JOIN"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonJoin" />

            <Button
                android:id="@+id/get_directions_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/direct"
                android:text="Directions"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonMap" />

            <Button
                android:id="@+id/event_on_map_button"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:drawableLeft="@drawable/onmap"
                android:text="MAP"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonMap" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="7dp"
            android:background="#F2F2F7" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/cancel_participation_in_event_button"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="CANCEL"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonCancel" />

            <Button
                android:id="@+id/add_to_calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add to calendar"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonEventInfo" />

            <Button
                android:id="@+id/open_chat_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open chat"
                android:textColor="#FFFFFF"
                android:theme="@style/MyButtonEventInfo" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#F2F2F7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:text="EVENT DETAILS"
            android:textColor="@color/accent"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/event_details_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="10dp"
            android:textColor="@color/secondary_text"
            android:textSize="22sp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:background="#F2F2F7" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/event_creator_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:text="Organized by "
                android:textSize="22sp" />

            <TextView
                android:id="@+id/event_creator_id_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="1dp"
                android:paddingTop="10dp"
                android:textColor="@color/accent"
                android:textSize="22sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="9dp"
            android:background="#F2F2F7" />

        <TextView
            android:id="@+id/people_going_count_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_view_event_attendees"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="14dp"
            android:scrollbars="horizontal"
            android:visibility="visible"></android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:id="@+id/rating_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <View
                android:layout_width="fill_parent"
                android:layout_height="15dp"
                android:background="#F2F2F7" />

            <TextView
                android:id="@+id/rating_layout_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:text="Did you like this event?"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:numStars="5"
                    android:rating="3"
                    android:stepSize="0.1"
                    android:theme="@style/RatingBar" />

                <Button
                    android:id="@+id/submit_rating_button"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/corner_button_radius"
                    android:text="RATE"
                    android:textColor="#FFFFFF" />

                <TextView
                    android:id="@+id/already_voted_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="You already voted"
                    android:textSize="15dp"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/txtRatingValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/accent" />
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>
