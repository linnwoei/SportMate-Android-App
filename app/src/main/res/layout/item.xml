<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round"
        card_view:cardCornerRadius="19dp"
        android:layout_marginBottom="@dimen/cardview_compat_inset_shadow">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/event_photo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:maxWidth="100dp" />



            <TextView
                android:id="@+id/event_sport_title"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="bottom"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center" />

            <LinearLayout
                android:id="@+id/date_city_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:layout_gravity="center">
                <TextView
                    android:drawableLeft="@drawable/calendar1"
                    android:drawablePadding="3dp"
                    android:id="@+id/event_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_sport_title"
                    android:layout_toRightOf="@+id/event_photo"
                    android:textColor="@color/primary_text" />

                <TextView
                    android:id="@+id/event_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/event_sport_title"
                    android:layout_toRightOf="@+id/event_photo"
                    android:drawableLeft="@drawable/map"
                    android:drawablePadding="3dp"
                    android:textColor="@color/primary_text" />

            </LinearLayout>


            <View
                android:layout_width="fill_parent"
                android:layout_height="7dp"
                android:background="#F2F2F7" />


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>