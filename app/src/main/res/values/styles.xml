<resources>
    <style name="MyAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#03A9F4</item>
        <item name="colorPrimaryDark">#0288D1</item>
        <item name="colorAccent">#FF9800</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>



    <attr name="sc_corner_radius" format="dimension" />
    <attr name="sc_border_width" format="dimension" />
    <attr name="sc_tint_color" format="color" />
    <attr name="sc_checked_text_color" format="color" />


    <style name="MyButtonJoin" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary_dark</item>
    </style>

    <style name="MyButtonCancel" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">#E35754</item>
        <item name="colorButtonNormal">#D85251</item>
    </style>




    <style name="MyButtonEventInfo" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary_dark</item>
        <item name="colorButtonNormal">@color/primary_dark</item>
    </style>


    <style name="MyButtonMap" parent="Theme.AppCompat.Light">
        <item name="colorControlHighlight">@color/primary</item>
        <item name="colorButtonNormal">@color/primary</item>
    </style>


    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/primary_light</item>
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="myDialog" parent="Theme.AppCompat.Dialog">
       <item name="actionBarStyle">@color/primary_light</item>
    </style>

</resources>
